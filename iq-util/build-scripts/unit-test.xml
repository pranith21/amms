<project name="iq-switch-client Initiation" default="start">
	<target name="start">
		<antcall target="test"></antcall>
	</target>
	
	<target name="test" >
		<junit haltonerror="true" haltonfailure="true">
			<classpath>
				<pathelement location="${output.dir}" />
				<pathelement location="lib/ant-junit-1.6.5.jar"/>
			</classpath>
			<batchtest>
				<fileset dir="${output.dir}">
					<include name="iq/test/**/*Test.class" />
				</fileset>
			</batchtest>
			<formatter type="brief" usefile="false"/>
		</junit>
	</target>
</project>
